{
  "name": "doganoo/php-util",
  "description": "A collection of common classes and methods that I am usually working with",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Dogan Ucar",
      "email": "dogan@dogan-ucar.de"
    }
  ],
  "autoload": {
    "psr-4": {
      "doganoo\\PHPUtil\\": "src/",
      "doganoo\\PHPUtil\\Test\\": "test/"
    }
  },
  "conflict": {
    "stevebauman/unfinalize": "*"
  },
  "require": {
    "doganoo/php-algorithms": "*",
    "ext-fileinfo": "*",
    "ext-iconv": "*",
    "ext-mbstring": "*",
    "ext-json": "*",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9"
  },
  "scripts": {
    "unit-test": "./vendor/bin/phpunit test/Unit",
    "integration-test": "php test/Integration/main.php"
